<?xml version="1.0" encoding="UTF-8"?>
<adapt_framework>
    <bundle>
        <name>advanced_data_types</name>
        <label>Advanced Data Types</label>
        <type>data_type</type>
        <version>1.0.9</version>
        <version_status>release</version_status>
        <availability>public</availability>
        <namespace>\adapt\advanced_data_types</namespace>
        <description>Extending the default data types to include validators for email, xml, IP addresses (v4 and v6) and more.</description>
        <copyright>2017 Matt Bruton</copyright>
        <license>MIT</license>
        <vendor>
            <name>Adapt Framework</name>
            <website>https://www.adaptframework.com</website>
        </vendor>
        <authors>
            <author>
                <name>Matt Bruton</name>
                <email>matt.bruton@gmail.com</email>
            </author>
        </authors>
        <depends_on>
            <bundle>
                <name>adapt</name>
                <version>2.0</version>
            </bundle>
        </depends_on>
        <schema>
            <add>
                <table name="data_type">
                    <record>
                        <name>xml</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>xml</validator>
                    </record>
                    <record>
                        <name>html</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>html</validator>
                    </record>
                    <record>
                        <name>ip4</name>
                        <based_on_data_type>varchar(15)</based_on_data_type>
                        <validator>ip4</validator>
                    </record>
                    <record>
                        <name>ip6</name>
                        <based_on_data_type>varchar(256)</based_on_data_type>
                        <validator>ip6</validator>
                    </record>
                    <record>
                        <name>email_address</name>
                        <based_on_data_type>varchar(256)</based_on_data_type>
                        <validator>email_address</validator>
                    </record>
                    <record>
                        <name>name</name>
                        <based_on_data_type>varchar(64)</based_on_data_type>
                    </record>
                    <record>
                        <name>json</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>json</validator>
                    </record>
                    <record>
                        <name>percent</name>
                        <based_on_data_type>decimal(20,10)</based_on_data_type>
                        <validator>percent</validator>
                        <formatter>percent</formatter>
                        <unformatter>percent</unformatter>
                    </record>
                    <record>
                        <name>username</name>
                        <based_on_data_type>varchar(64)</based_on_data_type>
                        <validator>username</validator>
                    </record>
                    <record>
                        <name>hostprefix</name>
                        <based_on_data_type>varchar(256)</based_on_data_type>
                        <validator>hostprefix</validator>
                    </record>
                </table>
            </add>
        </schema>
    </bundle>
</adapt_framework>
