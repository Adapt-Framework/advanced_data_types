<?xml version="1.0" encoding="UTF-8"?>
<adapt_framework>
    <bundle>
        <name>advanced_data_types</name>
        <label>Advanced Data Types</label>
        <type>data_type</type>
        <version>1.0.0</version>
        <namespace>\adapt\advanced_data_types</namespace>
        <description>Extending the default data types to include validators for email, xml, IP addresses (v4 and v6) and more.</description>
        <copyright>2016 Matt Bruton</copyright>
        <license>MIT</license>
        <website>https://www.adaptframework.com/bundles/advanced_data_types</website>
        <depends_on>
            <bundle>
                <name>adapt</name>
                <version>2.0</version>
            </bundle>
        </depends_on>
        <schema>
            <add>
                <table name="data_type">
                    <record>
                        <name>xml</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>xml</validator>
                    </record>
                    <record>
                        <name>html</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>html</validator>
                    </record>
                    <record>
                        <name>ip4</name>
                        <based_on_data_type>varchar(15)</based_on_data_type>
                        <validator>ip4</validator>
                    </record>
                    <record>
                        <name>ip6</name>
                        <based_on_data_type>varchar(256)</based_on_data_type>
                        <validator>ip6</validator>
                    </record>
                    <record>
                        <name>email_address</name>
                        <based_on_data_type>varchar(256)</based_on_data_type>
                        <validator>email_address</validator>
                    </record>
                    <record>
                        <name>name</name>
                        <based_on_data_type>varchar(64)</based_on_data_type>
                        <validator>name</validator>
                        <formatter>name</formatter>
                    </record>
                    <record>
                        <name>json</name>
                        <based_on_data_type>text</based_on_data_type>
                        <validator>json</validator>
                    </record>
                </table>
            </add>
        </schema>
    </bundle>
</adapt_framework>
